@using Ckan_Front_End.Api.Model
@using Ckan_Front_End.Web.Models
@model Package

@{
    var license = CkanHelper.GetLicenseById(Model.LicenseId);
    license.Url = !string.IsNullOrEmpty(license.Url) ? license.Url : "#";
}
<div class="container">
    <h2 class="sidebar-title">
        <img class="img" src="../../Content/Theme/BridgeView/images/usage.png" />License</h2>
    <div class="container-content">

    @if (license != null) {
        <div>
        <a href="@license.Url" class="license-title" target="_top">@license.Title</a>
        </div>
        
        if (license.IsOkdCompliant)
        {
            <!-- Open Data Link -->
            <div>
            <a href="http://opendefinition.org/" class="external" target="_top">
              <img class="button-open-data tooltip"
              alt="This material is Open Data" border="0"
              src="http://m.okfn.org/images/ok_buttons/od_80x15_blue.png"
              title="This material is Open Data"/>
            </a>
            </div>
            <!-- /Open Data Link -->
        }
    }
    else
    {
        <span>License not specified.</span>
    }
    </div>

</div>

